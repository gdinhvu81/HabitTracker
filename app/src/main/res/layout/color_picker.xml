<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.gdinh.picker.ColorPicker">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hex"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button"
            android:layout_marginTop="54dp"
            android:gravity="center"
            android:text="Hexadecimal"
            android:textSize="50dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/toolbar"
            android:background="#ffffff"
            android:text="" />

        <SeekBar
            android:id="@+id/sb_blue"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />

        <SeekBar
            android:id="@+id/sb_green"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sb_blue"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />

        <SeekBar
            android:id="@+id/sb_red"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sb_green"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/sb_red"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Red" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_below="@+id/sb_red"
            android:text="Green" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sb_blue"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:text="Blue" />

        <TextView
            android:id="@+id/tv_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_green"
            android:layout_alignLeft="@+id/tv_green"
            android:layout_alignTop="@+id/sb_red"
            android:text="255" />

        <TextView
            android:id="@+id/tv_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_blue"
            android:layout_alignLeft="@+id/tv_blue"
            android:layout_below="@+id/sb_red"
            android:text="255" />

        <TextView
            android:id="@+id/tv_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sb_blue"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_toEndOf="@+id/sb_blue"
            android:layout_toRightOf="@+id/sb_blue"
            android:text="255" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hex"
            android:layout_centerHorizontal="true"
            android:onClick="sendColor"
            android:text="OK" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>